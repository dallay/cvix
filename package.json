{
	"name": "cvix",
	"version": "3.7.0",
	"description": "cvix monorepo",
	"private": true,
	"type": "module",
	"license": "MIT",
	"homepage": "https://cvix.tech",
	"author": "cvix Team",
	"keywords": [
		"cvix",
		"monorepo"
	],
	"engines": {
		"node": ">=24.12.0",
		"pnpm": ">=10.27.0"
	},
	"packageManager": "pnpm@10.27.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/dallay/cvix.git",
		"branch": "main"
	},
	"bugs": {
		"url": "https://github.com/dallay/cvix/issues"
	},
	"workspaces": {
		"packages": [
			"client/apps/*",
			"client/packages/*",
			"client/config",
			"docs"
		]
	},
	"scripts": {
		"update-deps": "pnpm update -i -r --latest",
		"preinstall": "npx only-allow pnpm",
		"prepare": "if [ -d .git ]; then pnpm exec lefthook install && pnpm run ruler:apply; fi",
		"ruler:apply": "npx @intellectronica/ruler apply",
		"ruler:check": "npx @intellectronica/ruler check",
		"dev": "pnpm --recursive --parallel run dev",
		"dev:landing": "pnpm --filter @cvix/marketing dev",
		"dev:blog": "pnpm --filter @cvix/blog dev",
		"dev:web": "pnpm --filter @cvix/webapp dev",
		"dev:docs": "pnpm --filter @cvix/docs dev",
		"build": "pnpm --recursive run build",
		"build:landing": "pnpm --filter @cvix/marketing build",
		"preview:landing": "pnpm --filter @cvix/marketing preview",
		"build:web": "pnpm --filter @cvix/webapp build",
		"build:docs": "pnpm --filter @cvix/docs build",
		"test": "pnpm --recursive run test",
		"test:ui": "pnpm --recursive run test:ui",
		"test:coverage": "pnpm --recursive run test:coverage",
		"test:e2e": "pnpm --filter @cvix/webapp test:e2e",
		"test:e2e:ui": "pnpm --filter @cvix/webapp test:e2e:ui",
		"test:e2e:headed": "pnpm --filter @cvix/webapp test:e2e:headed",
		"test:e2e:debug": "pnpm --filter @cvix/webapp test:e2e:debug",
		"test:e2e:report": "pnpm --filter @cvix/webapp test:e2e:report",
		"test:e2e:chromium": "pnpm --filter @cvix/webapp test:e2e -- --project=chromium",
		"test:e2e:firefox": "pnpm --filter @cvix/webapp test:e2e -- --project=firefox",
		"test:e2e:webkit": "pnpm --filter @cvix/webapp test:e2e -- --project=webkit",
		"test:webapp": "pnpm --filter @cvix/webapp test",
		"test:marketing": "pnpm --filter @cvix/marketing test",
		"test:utilities": "pnpm --filter @cvix/utilities test",
		"lint": "pnpm --recursive run lint",
		"lint:strict": "pnpm --recursive run lint:strict",
		"check": "pnpm run -r check && biome check . --write",
		"clean": "pnpm --recursive run clean",
		"backend:build": "./gradlew build",
		"backend:run": "./gradlew bootRun",
		"backend:test": "./gradlew test",
		"backend:clean": "./gradlew clean",
		"start": "run-p backend:run dev",
		"test:all": "pnpm --recursive run test && pnpm run backend:test && pnpm run test:e2e",
		"test:all:unit": "pnpm --recursive run test && pnpm run backend:test",
		"precommit": "pnpm run ruler:apply",
		"release": "semantic-release",
		"release:dry-run": "semantic-release --dry-run"
	},
	"devDependencies": {
		"@astrojs/vue": "catalog:",
		"@biomejs/biome": "^2.3.11",
		"@commitlint/cli": "^20.3.0",
		"@commitlint/config-conventional": "^20.3.0",
		"@eslint/json": "^0.14.0",
		"@playwright/test": "catalog:",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/exec": "^7.1.0",
		"@semantic-release/git": "^10.0.1",
		"@types/node": "catalog:",
		"@vitest/ui": "^4.0.16",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"lefthook": "^2.0.13",
		"markdownlint-cli2": "^0.20.0",
		"npm-run-all2": "catalog:",
		"oxlint": "catalog:",
		"semantic-release": "catalog:",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vite-tsconfig-paths": "catalog:",
		"vitest": "catalog:"
	},
	"pnpm": {
		"overrides": {
			"@cvix/docs>zod": "^3.23.8",
			"glob": "^13.0.0",
			"js-yaml": "^4.1.1"
		}
	}
}
