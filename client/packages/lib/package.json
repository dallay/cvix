{
	"name": "@cvix/lib",
	"version": "3.1.0",
	"description": "Shared utility functions for CVIX monorepo",
	"author": "CVIX Team <team@profiletailors.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/dallay/cvix.git",
		"directory": "client/packages/lib"
	},
	"homepage": "https://profiletailors.com/",
	"bugs": {
		"url": "https://github.com/dallay/cvix/issues"
	},
	"keywords": [
		"utilities",
		"lib",
		"cvix",
		"shared"
	],
	"packageManager": "pnpm@10.28.2",
	"type": "module",
	"files": [
		"src"
	],
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": "./src/index.ts",
		"./utils": "./src/utils.ts",
		"./ssl": "./src/consts/ssl-paths.ts",
		"./*": "./src/*"
	},
	"typesVersions": {
		"*": {
			"*": [
				"./src/*"
			]
		}
	},
	"sideEffects": false,
	"scripts": {
		"lint": "biome check .",
		"format": "biome format . --write",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@cvix/i18n": "workspace:*",
		"clsx": "catalog:",
		"satori": "0.19.1",
		"tailwind-merge": "catalog:"
	},
	"devDependencies": {
		"@cvix/tsconfig": "workspace:*",
		"@types/node": "catalog:",
		"sharp": "catalog:",
		"typescript": "catalog:"
	}
}
