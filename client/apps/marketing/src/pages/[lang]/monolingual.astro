---
import NotTranslateCaution from "@cvix/astro-ui/components/i18n/NotTranslateCaution.astro";
import Layout from "@cvix/astro-ui/components/layouts/base-layout/BaseLayout.astro";
import { getOgImagePath } from "@cvix/lib";
import PageHeadline from "@/components/PageHeadline.astro";
import { localeParams } from "@/i18n";

const title = "Monolingual Page";
const description = "This is a sample monolingual page.";
export const getStaticPaths = () => localeParams;

// Safe OG image path that works during static build
const pathname = Astro.url?.pathname ?? "/monolingual";
const origin = Astro.url?.origin ?? "";
const ogImage = origin
	? new URL(getOgImagePath(pathname), origin).href
	: getOgImagePath(pathname);
const og = {
	image: ogImage,
	xAccount: "@yacosta738",
};
---

<Layout {title} {description} {og}>
  <NotTranslateCaution usedLangs={["en"]} />
  <PageHeadline title={title} />

  <p>Here is a sample page when only one language is set.</p>

  <p>
    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
    quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
    consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
    cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat
    non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
  </p>
</Layout>
