										</svg>
									</a>
								</div>
							</div>
						</div>
					</div>

					<div class="pt-8 border-t border-border">
						<p class="text-muted-foreground mb-4">
							{t('contact.learnMorePrompt')}
						</p>
						<a
							href={`/${locale}/about`}
							class="inline-flex items-center gap-2 text-primary hover:underline font-medium"
						>
							{t('contact.aboutLink')}
							<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
							</svg>
						</a>
					</div>
				</div>

				<div>
					<div class="bg-card border border-border rounded-lg p-8">
						<h2 class="text-2xl font-bold mb-6">{t('contact.formTitle')}</h2>
						<CsrfToken />
						<form class="space-y-6" method="POST" data-contact-form>
							<FieldSet>
								<FieldGroup>
									<!-- Name Field -->
									<Field>
										<FieldLabel for="name">
											{t('contact.formName')}
										</FieldLabel>
										<Input
											type="text"
											id="name"
											name="name"
											required
											placeholder={t('contact.formNamePlaceholder')}
										/>
									</Field>

									<!-- Email Field -->
									<Field>
										<FieldLabel for="email">
											{t('contact.formEmail')}
										</FieldLabel>
										<Input
											type="email"
											id="email"
											name="email"
											required
											placeholder={t('contact.formEmailPlaceholder')}
										/>
									</Field>

									<!-- Subject Field -->
									<Field>
										<FieldLabel for="subject">
											{t('contact.formSubject')}
										</FieldLabel>
										<Input
											type="text"
											id="subject"
											name="subject"
											required
											placeholder={t('contact.formSubjectPlaceholder')}
										/>
									</Field>

									<!-- Message Field -->
									<Field>
										<FieldLabel for="message">
											{t('contact.formMessage')}
										</FieldLabel>
										<Textarea
											id="message"
											name="message"
											required
											rows={5}
											placeholder={t('contact.formMessagePlaceholder')}
										/>
									</Field>
								</FieldGroup>
							</FieldSet>

              {HCAPTCHA_SITE_KEY && (
							<div class="flex justify-center">
								<HCaptcha
									id="contact-captcha"
									siteKey={HCAPTCHA_SITE_KEY}
									theme="auto"
								/>
							</div>
              )}

							<!-- Submit Button -->
							<Button
								type="submit"
								variant="default"
								size="lg"
								class="w-full"
							>
                <Icon name="tabler:send" class="w-5 h-5 mr-2" />
								{t('contact.formSubmit')}
							</Button>
						</form>

						<div id="form-message" class="mt-4 hidden">
							<div class="p-4 rounded-md" role="alert"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
