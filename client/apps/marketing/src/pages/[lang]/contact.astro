	<!-- Schema.org Structured Data -->
	<script type="application/ld+json" set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "ContactPage",
		"name": t('contact.title'),
		"description": t('contact.description'),
		"url": Astro.url.href,
		"mainEntity": {
			"@type": "Organization",
			"name": "ProfileTailors",
			"email": "contact@profiletailors.com",
			"sameAs": [
				"https://www.x.com/yacosta738",
				"https://www.linkedin.com/in/yacosta738",
				"https://www.github.com/yacosta738"
			]
		}
	})} />

	<Footer links={footerNavLinks(Astro.currentLocale as Lang)} />
</Layout>

<!-- Pass server data to client via data attributes -->
<div
	id="contact-form-config"
	data-backend-url={CVIX_API_URL}
	data-lang={locale}
	data-translations={JSON.stringify({
		sending: t('contact.formSending'),
		success: t('contact.formSuccess'),
		error: t('contact.formError'),
		captchaRequired: t('contact.captchaRequired'),
		submit: t('contact.formSubmit'),
	})}
	style="display: none;"
></div>

<script>
	import { ContactService } from '@cvix/lib';

	document.addEventListener('DOMContentLoaded', () => {
		const form = document.querySelector('[data-contact-form]') as HTMLFormElement | null;
		const messageDiv = document.getElementById('form-message');
		const configEl = document.getElementById('contact-form-config');

		if (!form || !messageDiv || !configEl) return;

		// Extract configuration from data attributes
		const backendUrl = configEl.dataset.backendUrl || '';
		const currentLang = configEl.dataset.lang || 'en';
		const translations = JSON.parse(configEl.dataset.translations || '{}');

		const alertDiv = messageDiv.querySelector('div');
		if (!alertDiv) return;

		// Initialize ContactService with backend URL
		const contactService = new ContactService({
			baseURL: backendUrl,
		});

		// Lazy load CSRF token on first interaction with the form
		const lazyLoadCsrf = () => {
			if (backendUrl && (window as any).csrfLoader) {
				(window as any).csrfLoader.ensureToken(backendUrl).catch((err: Error) => {
					console.warn("CSRF lazy load failed:", err);
				});
			}
		};

		// Initialize CSRF on first focus or input on any form field
		const formInputs = form.querySelectorAll('input, textarea');
		formInputs.forEach(input => {
			input.addEventListener("focus", lazyLoadCsrf, { once: true });
			input.addEventListener("input", lazyLoadCsrf, { once: true });
		});

		const showMessage = (type: 'success' | 'error' | 'warning', text: string) => {
			// Reset classes
			alertDiv.className = 'p-4 rounded-md';

			if (type === 'success') {
				alertDiv.classList.add('bg-success/10', 'text-success', 'border', 'border-success/20');
			} else if (type === 'error') {
				alertDiv.classList.add('bg-destructive/10', 'text-destructive', 'border', 'border-destructive/20');
			} else if (type === 'warning') {
				alertDiv.classList.add('bg-warning/10', 'text-warning', 'border', 'border-warning/20');
			}

			alertDiv.textContent = text;
			messageDiv.classList.remove('hidden');
		};

		const hideMessage = () => {
			messageDiv.classList.add('hidden');
		};

		form.addEventListener('submit', async (e) => {
			e.preventDefault();
			hideMessage();

			const formData = new FormData(form);
			const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement | null;
			if (!submitButton) return;

			const originalButtonText = submitButton.textContent;

			// Get captcha token
			const captchaToken = (window as any).getCaptchaToken?.('contact-captcha');
			if (!captchaToken) {
				showMessage('warning', translations.captchaRequired);
				return;
			}

			// Disable button during submission
			submitButton.disabled = true;
			submitButton.textContent = translations.sending;

			// Ensure CSRF token is loaded before submitting
			if (backendUrl && (window as any).csrfLoader) {
				try {
					await (window as any).csrfLoader.ensureToken(backendUrl);
				} catch (err) {
					console.warn("CSRF token load failed:", err);
				}
			}

			try {
				// Submit using ContactService
				const result = await contactService.submitContactForm(
					{
						name: formData.get('name') as string,
						email: formData.get('email') as string,
						subject: formData.get('subject') as string,
						message: formData.get('message') as string,
						hcaptchaToken: captchaToken,
					},
					currentLang,
				);

				// Show success message
				showMessage('success', result.message || translations.success);

				// Reset form and captcha
				form.reset();
				(window as any).resetCaptcha?.('contact-captcha');
			} catch (error) {
				// Only log errors in development to avoid exposing sensitive data
				if (import.meta.env.DEV) {
					console.error('Contact form submission error:', error);
				}

				// Extract error message from service response
				const errorMessage = (error as Error)?.message || translations.error;
				showMessage('error', errorMessage);

				// Reset captcha on error so user can try again
				(window as any).resetCaptcha?.('contact-captcha');
			} finally {
				// Re-enable button
				submitButton.disabled = false;
				submitButton.textContent = originalButtonText;
			}
		});
	});
</script>
