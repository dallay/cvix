---
import { type Lang, useTranslations } from "@/i18n";
import {BASE_WEBAPP_URL} from "@/consts.ts";

const lang = Astro.currentLocale as Lang;
const t = useTranslations(lang);

export interface TemplateShowcase {
  id: string;
  name: string;
  url: string;
  color: string;
}

const templates: TemplateShowcase[] = [
      { id: "executive", name: t("templates.executive"), url: `${BASE_WEBAPP_URL}/templates/executive`, color: "bg-stone-100" },
      { id: "creative", name: t("templates.creative"), url: `${BASE_WEBAPP_URL}/templates/creative`, color: "bg-rose-50" },
      { id: "minimal", name: t("templates.minimal"), url: `${BASE_WEBAPP_URL}/templates/minimal`, color: "bg-white" },
      { id: "modern", name: t("templates.modern"), url: `${BASE_WEBAPP_URL}/templates/modern`, color: "bg-slate-50" },
    ];
---

<section class="py-24 bg-secondary/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-foreground mb-4 max-w-3xl mx-auto">
        {t("template.showcase.heading")}
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        {t("template.showcase.description")}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        templates.map((template) => (
          <a
            href={template.url}
            class="group relative aspect-[1/1.4] rounded-lg shadow-lg overflow-hidden transition-transform hover:-translate-y-2 focus:-translate-y-2 duration-300 block focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
            aria-label={t("template.showcase.useTemplate", { template: template.name })}
          >
            <div class={`w-full h-full ${template.color} p-4 flex flex-col text-slate-900`}>
              <div class="h-4 w-1/3 bg-current opacity-10 rounded mb-4" />
              <div class="h-2 w-full bg-current opacity-5 rounded mb-2" />
              <div class="h-2 w-full bg-current opacity-5 rounded mb-2" />
              <div class="h-2 w-2/3 bg-current opacity-5 rounded mb-8" />

              <div class="grid grid-cols-3 gap-4 mb-4">
                <div class="col-span-1 h-20 bg-current opacity-5 rounded" />
                <div class="col-span-2 space-y-2">
                  <div class="h-2 w-full bg-current opacity-5 rounded" />
                  <div class="h-2 w-full bg-current opacity-5 rounded" />
                  <div class="h-2 w-full bg-current opacity-5 rounded" />
                </div>
              </div>
              <div class="space-y-2 mt-auto">
                <div class="h-2 w-full bg-current opacity-5 rounded" />
                <div class="h-2 w-full bg-current opacity-5 rounded" />
                <div class="h-2 w-full bg-current opacity-5 rounded" />
              </div>
            </div>
            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 group-focus:bg-black/5 transition-colors flex items-center justify-center opacity-0 group-hover:opacity-100 group-focus:opacity-100">
              <span class="bg-primary text-primary-foreground px-4 py-2 rounded-full font-medium shadow-lg transform translate-y-4 group-hover:translate-y-0 group-focus:translate-y-0 transition-all duration-300">
                {t("template.showcase.useTemplate", { template: template.name })}
              </span>
            </div>
          </a>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <a
        href="#"
        class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-full text-white bg-primary hover:bg-primary/90 md:py-4 md:text-lg md:px-10 transition-all shadow-lg hover:shadow-xl"
      >
        {t("template.showcase.viewAll")}
      </a>
    </div>
  </div>
</section>
