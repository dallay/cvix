				<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
					{t('contact.title')}
				</h1>
				<p class="text-xl text-muted-foreground">
					{t('contact.description')}
				</p>
			</div>
		</div>
	</section>

