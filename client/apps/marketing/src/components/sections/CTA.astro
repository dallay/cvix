---
import { Icon } from "astro-icon/components";
import { type Lang, useTranslations } from "@/i18n";

const lang = Astro.currentLocale as Lang;
const t = useTranslations(lang);
---

<section class="py-24 bg-secondary/30">
  <div class="container mx-auto max-w-screen-xl px-4 text-center">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-foreground mb-6 leading-tight">
        {t("cta.heading")}
      </h2>
      <p class="text-xl text-muted-foreground mb-10">
        {t("cta.description")}
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="#"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white transition-all bg-primary rounded-full hover:bg-primary/90 shadow-lg hover:shadow-primary/25 min-w-[200px]"
        >
          {t("cta.button")}
        </a>
      </div>

      <p class="mt-6 text-sm text-muted-foreground flex items-center justify-center gap-2">
        <Icon name="tabler:check" class="w-4 h-4 text-green-600" />
        {t("cta.microcopy")}
      </p>
    </div>
  </div>
</section>
