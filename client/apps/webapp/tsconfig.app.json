{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"icons.d.ts",
		"src/**/*",
		"src/**/*.d.ts",
		"components.d.ts"
	],
	"exclude": [
		"src/**/__tests__/*",
		"src/components/ui",
		"src/components/ui/**/*",
		"src/components/ui/**/*.vue"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

		"paths": {
			"@/*": ["./src/*"],
			"@cvix/ui": ["../../packages/ui/src/index.ts"],
			"@cvix/ui/*": ["../../packages/ui/src/*"],
			"@cvix/utilities": ["../../packages/utilities/src/index.ts"],
			"@cvix/utilities/*": ["../../packages/utilities/src/*"],
			"@cvix/assets": ["../../packages/assets/src/index.ts"],
			"@cvix/assets/*": ["../../packages/assets/src/*"]
		}
	}
}
