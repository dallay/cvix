---
import { Icon } from "astro-icon/components";
import { type Lang, useTranslations } from "@/i18n";

const currentLanguage = Astro.currentLocale as Lang;
const t = useTranslations(currentLanguage);

// Define FAQ items directly from translations
const faqItems = [
  {
    question: t("faq.question1"),
    answer: t("faq.answer1"),
  },
  {
    question: t("faq.question2"),
    answer: t("faq.answer2"),
  },
  {
    question: t("faq.question3"),
    answer: t("faq.answer3"),
  },
  {
    question: t("faq.question4"),
    answer: t("faq.answer4"),
  },
];
---

<section class="bg-white dark:bg-gray-900">
  <div class="py-24 px-4 md:px-10 lg:px-20 mx-auto max-w-screen-xl">
    <h2 class="mb-16 text-5xl font-bold text-center text-gray-900 dark:text-white">
      {t("faq.title")}
    </h2>
    <div class="flex flex-col gap-6 max-w-4xl mx-auto">
      {
        faqItems.map((faq) => (
          <details class="group bg-gray-50 dark:bg-gray-800 rounded-lg p-6">
            <summary class="flex justify-between items-center cursor-pointer list-none">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{faq.question}</h3>
              <Icon
                name="tabler:chevron-down"
                class="w-6 h-6 text-gray-500 transition-transform group-open:rotate-180"
              />
            </summary>
            <p class="mt-4 text-gray-600 dark:text-gray-400 leading-relaxed">{faq.answer}</p>
          </details>
        ))
      }
    </div>
  </div>
</section>
