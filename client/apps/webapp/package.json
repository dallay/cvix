{
	"name": "@cvix/webapp",
	"version": "1.6.2",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=24.12.0"
	},
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check \"build-only {@}\" --",
		"preview": "vite preview",
		"pretest": "pnpm --filter @cvix/utilities build",
		"test:unit": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:report": "playwright show-report",
		"test": "run-s pretest test:unit",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"build-only": "vite build",
		"type-check": "vue-tsc --build",
		"lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
		"lint:biome": "biome check . --write",
		"lint": "run-s lint:*",
		"clean": "rm -rf dist node_modules .vitest .cache playwright-report test-results",
		"check": "run-p type-check lint",
		"predev": "pnpm --filter @cvix/utilities build",
		"prebuild": "pnpm --filter @cvix/utilities build"
	},
	"dependencies": {
		"@cvix/assets": "workspace:*",
		"@cvix/ui": "workspace:*",
		"@cvix/utilities": "workspace:*",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/vue-table": "^8.21.3",
		"@unovis/ts": "^1.6.2",
		"@unovis/vue": "^1.6.2",
		"@vee-validate/zod": "^4.15.1",
		"@vueuse/core": "^14.1.0",
		"ajv": "^8.17.1",
		"ajv-errors": "^3.0.0",
		"ajv-formats": "^3.0.1",
		"axios": "^1.13.2",
		"embla-carousel-vue": "^8.6.0",
		"idb-keyval": "^6.2.2",
		"libphonenumber-js": "^1.12.31",
		"lucide-vue-next": "^0.561.0",
		"pinia": "^3.0.4",
		"reka-ui": "^2.6.1",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"vaul-vue": "^0.4.1",
		"vee-validate": "^4.15.1",
		"vue": "^3.5.25",
		"vue-i18n": "^11.2.2",
		"vue-router": "^4.6.4",
		"vue-sonner": "^2.0.9",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@iconify-json/ph": "^1.2.2",
		"@playwright/test": "^1.57.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/user-event": "^14.6.1",
		"@testing-library/vue": "^8.1.0",
		"@tsconfig/node22": "^22.0.5",
		"@types/jsdom": "^27.0.0",
		"@types/node": "^24.0.0",
		"@vitejs/plugin-vue": "^6.0.3",
		"@vitest/coverage-v8": "^4.0.16",
		"@vue/eslint-config-typescript": "^14.6.0",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.8.1",
		"axe-core": "^4.11.0",
		"jiti": "^2.6.1",
		"jsdom": "^27.2.0",
		"npm-run-all2": "^8.0.4",
		"oxlint": "~1.33.0",
		"typescript": "~5.9.3",
		"unplugin-icons": "^22.5.0",
		"unplugin-vue-components": "^30.0.0",
		"vite": "^7.3.0",
		"vite-plugin-vue-devtools": "^8.0.5",
		"vitest": "^4.0.16",
		"vitest-axe": "^0.1.0",
		"vue-tsc": "^3.1.5"
	}
}
