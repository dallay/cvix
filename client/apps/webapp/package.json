{
	"name": "@cvix/webapp",
	"version": "3.15.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=24.12.0"
	},
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check \"build-only {@}\" --",
		"preview": "vite preview",
		"pretest": "pnpm --filter @cvix/utilities build",
		"test:unit": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:report": "playwright show-report",
		"test": "run-s pretest test:unit",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"build-only": "vite build",
		"type-check": "vue-tsc --build",
		"lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
		"lint:biome": "biome check . --write",
		"lint": "run-s lint:*",
		"clean": "rm -rf dist node_modules .vitest .cache playwright-report test-results",
		"check": "run-p type-check lint",
		"predev": "pnpm --filter @cvix/utilities build",
		"prebuild": "pnpm --filter @cvix/utilities build"
	},
	"dependencies": {
		"@cvix/assets": "workspace:*",
		"@cvix/i18n": "workspace:*",
		"@cvix/lib": "workspace:*",
		"@cvix/ui": "workspace:*",
		"@cvix/utilities": "workspace:*",
		"@tailwindcss/vite": "catalog:",
		"@tanstack/vue-table": "catalog:",
		"@unovis/ts": "catalog:",
		"@unovis/vue": "catalog:",
		"@vee-validate/zod": "catalog:",
		"@vueuse/core": "catalog:",
		"ajv": "catalog:",
		"ajv-errors": "^3.0.0",
		"ajv-formats": "^3.0.1",
		"axios": "^1.13.4",
		"embla-carousel-vue": "catalog:",
		"idb-keyval": "^6.2.2",
		"libphonenumber-js": "^1.12.36",
		"lucide-vue-next": "catalog:",
		"pinia": "^3.0.4",
		"reka-ui": "catalog:",
		"tailwindcss": "catalog:",
		"tw-animate-css": "catalog:",
		"vaul-vue": "catalog:",
		"vee-validate": "catalog:",
		"vue": "catalog:",
		"vue-i18n": "^11.2.8",
		"vue-router": "^5.0.2",
		"vue-sonner": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@iconify-json/ph": "catalog:",
		"@playwright/test": "catalog:",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/user-event": "^14.6.1",
		"@testing-library/vue": "^8.1.0",
		"@tsconfig/node24": "^24.0.4",
		"@types/jsdom": "^27.0.0",
		"@types/node": "catalog:",
		"@vitejs/plugin-vue": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"@vue/eslint-config-typescript": "^14.6.0",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.8.1",
		"axe-core": "^4.11.1",
		"jiti": "^2.6.1",
		"jsdom": "^28.0.0",
		"npm-run-all2": "catalog:",
		"oxlint": "catalog:",
		"typescript": "catalog:",
		"unplugin-icons": "^23.0.1",
		"unplugin-vue-components": "^31.0.0",
		"vite": "catalog:",
		"vite-plugin-vue-devtools": "^8.0.5",
		"vitest": "catalog:",
		"vitest-axe": "^0.1.0",
		"vue-tsc": "catalog:"
	}
}
