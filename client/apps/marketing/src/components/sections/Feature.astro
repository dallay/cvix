---
import { Icon } from "astro-icon/components";
import { DEFAULT_LOCALE, type Lang, LOCALES, useTranslations } from "@/i18n";

// Determine the language to use
const astroLocale = Astro.currentLocale;
let langToUse: Lang;

if (astroLocale && LOCALES[astroLocale as Lang]) {
	langToUse = astroLocale as Lang;
} else {
	langToUse = DEFAULT_LOCALE;
}
const t = useTranslations(langToUse);
---
<section class="bg-white dark:bg-gray-900 py-12 sm:py-16 lg:py-20">
  <div class="px-4 mx-auto max-w-screen-xl">
    <div class="max-w-screen-md mx-auto mb-8 text-center lg:mb-12">
      <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">{t('features.heading')}</h2>
      <p class="text-gray-500 sm:text-xl dark:text-gray-400">{t('features.subheading')}</p>
    </div>
    
    <!-- Key Value Props (3 main features) -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      <div class="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
        <Icon name="tabler:file-type-pdf" class="w-12 h-12 mb-4 text-primary-600" />
        <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">{t('features.latexQuality.title')}</h3>
        <p class="text-gray-500 dark:text-gray-400">{t('features.latexQuality.description')}</p>
      </div>
      <div class="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
        <Icon name="tabler:bolt" class="w-12 h-12 mb-4 text-primary-600" />
        <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">{t('features.instantPDF.title')}</h3>
        <p class="text-gray-500 dark:text-gray-400">{t('features.instantPDF.description')}</p>
      </div>
      <div class="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
        <Icon name="tabler:shield-lock" class="w-12 h-12 mb-4 text-primary-600" />
        <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">{t('features.privacy.title')}</h3>
        <p class="text-gray-500 dark:text-gray-400">{t('features.privacy.description')}</p>
      </div>
    </div>

    <!-- Detailed Features (4 features) -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <div class="flex flex-col items-center text-center p-6">
        <Icon name="tabler:forms" class="w-12 h-12 mb-4 text-primary-600" />
        <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">{t('features.guidedForm.title')}</h3>
        <p class="text-gray-500 dark:text-gray-400">{t('features.guidedForm.description')}</p>
      </div>
      <div class="flex flex-col items-center text-center p-6">
        <Icon name="tabler:template" class="w-12 h-12 mb-4 text-primary-600" />
        <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">{t('features.modernTemplate.title')}</h3>
        <p class="text-gray-500 dark:text-gray-400">{t('features.modernTemplate.description')}</p>
      </div>
      <div class="flex flex-col items-center text-center p-6">
        <Icon name="tabler:download" class="w-12 h-12 mb-4 text-primary-600" />
        <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">{t('features.secureExport.title')}</h3>
        <p class="text-gray-500 dark:text-gray-400">{t('features.secureExport.description')}</p>
      </div>
      <div class="flex flex-col items-center text-center p-6">
        <Icon name="tabler:device-mobile" class="w-12 h-12 mb-4 text-primary-600" />
        <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">{t('features.mobileFirst.title')}</h3>
        <p class="text-gray-500 dark:text-gray-400">{t('features.mobileFirst.description')}</p>
      </div>
    </div>
  </div>
</section>
