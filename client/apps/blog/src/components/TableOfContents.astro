---
import { cn } from "@cvix/lib";
import type { MarkdownHeading } from "astro";
import { type Lang, useTranslations } from "@/i18n";

interface Props {
	headings: MarkdownHeading[];
	class?: string;
	lang?: Lang;
}

const { headings, class: className, lang = "en" } = Astro.props as Props;
const t = useTranslations(lang);

// Defensive default for headings
const toc = (headings ?? []).filter(
	(heading) => heading.depth > 1 && heading.depth < 4,
);
---

{
  toc.length > 0 && (
    <nav class={cn("toc", className)} aria-label={t("blog.tableOfContents")}>
      <h2 class="font-semibold text-lg mb-4 text-foreground">{t("blog.tableOfContents")}</h2>
      <ul class="space-y-2 text-sm">
        {toc.map((heading) => (
          <li
            class={cn(
              "transition-colors hover:text-primary",
              heading.depth === 3 && "pl-4 text-muted-foreground",
            )}
          >
            <a href={`#${heading.slug}`} class="block py-1">
              {heading.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  )
}
