---
import { Icon } from "astro-icon/components";
import { DEFAULT_LOCALE, type Lang, LOCALES, useTranslations } from "@/i18n";

const astroLocale = Astro.currentLocale;
let langToUse: Lang;

if (astroLocale && LOCALES[astroLocale as Lang]) {
  langToUse = astroLocale as Lang;
} else {
  langToUse = DEFAULT_LOCALE;
}
const t = useTranslations(langToUse);
---

<section class="py-24 bg-secondary/30">
  <div class="container mx-auto max-w-screen-xl px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Content -->
      <div>
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-foreground mb-6">
          Beat the bots! <br />
          Resumes optimized for ATS
        </h2>
        <p class="text-lg text-muted-foreground mb-8 leading-relaxed">
          {t("trustMetrics.subtitle")}
        </p>

        <div class="space-y-6 mb-10">
          <div class="flex items-start">
            <div
              class="flex-shrink-0 w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center mt-1"
            >
              <Icon name="tabler:check" class="w-4 h-4" />
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-foreground">ATS-friendly templates</h3>
              <p class="text-muted-foreground">
                Designed to be parsed correctly by Applicant Tracking Systems.
              </p>
            </div>
          </div>
          <div class="flex items-start">
            <div
              class="flex-shrink-0 w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center mt-1"
            >
              <Icon name="tabler:check" class="w-4 h-4" />
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-foreground">Keyword optimization</h3>
              <p class="text-muted-foreground">
                Get suggestions for keywords to include based on the job description.
              </p>
            </div>
          </div>
        </div>

        <a
          href="#"
          class="inline-flex items-center justify-center px-8 py-3 text-base font-medium text-white transition-all bg-primary rounded-full hover:bg-primary/90 shadow-lg hover:shadow-primary/25"
        >
          Check for ATS errors
        </a>
      </div>

      <!-- Image/Mockup -->
      <div class="relative">
        <div
          class="absolute -inset-4 bg-gradient-to-tr from-primary/20 to-secondary/20 rounded-full blur-3xl opacity-50"
        >
        </div>
        <div class="relative bg-white rounded-2xl shadow-xl border border-border p-6 md:p-8">
          <div class="flex items-center gap-4 mb-6 border-b border-border pb-4">
            <div class="w-12 h-12 rounded-full bg-gray-100 flex items-center justify-center">
              <Icon name="tabler:robot" class="w-6 h-6 text-gray-500" />
            </div>
            <div>
              <div class="h-4 w-32 bg-gray-200 rounded mb-2"></div>
              <div class="h-3 w-24 bg-gray-100 rounded"></div>
            </div>
            <div
              class="ml-auto px-3 py-1 bg-green-100 text-green-700 text-sm font-medium rounded-full"
            >
              98% Score
            </div>
          </div>
          <div class="space-y-4">
            <div class="h-4 w-full bg-gray-100 rounded"></div>
            <div class="h-4 w-5/6 bg-gray-100 rounded"></div>
            <div class="h-4 w-full bg-gray-100 rounded"></div>
            <div class="h-4 w-4/6 bg-gray-100 rounded"></div>
          </div>
          <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-100">
            <div class="flex gap-3">
              <Icon name="tabler:info-circle" class="w-5 h-5 text-blue-600 flex-shrink-0" />
              <p class="text-sm text-blue-800">
                Your resume is optimized for ATS parsing. All sections are readable.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
