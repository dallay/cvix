---
import { Icon } from "astro-icon/components";
import { type Lang, useTranslations } from "@/i18n";

const currentLanguage = Astro.currentLocale as Lang;
const t = useTranslations(currentLanguage);

// Define FAQ items directly from translations
const faqItems = [
  {
    question: t("faq.question1"),
    answer: t("faq.answer1"),
  },
  {
    question: t("faq.question2"),
    answer: t("faq.answer2"),
  },
  {
    question: t("faq.question3"),
    answer: t("faq.answer3"),
  },
  {
    question: t("faq.question4"),
    answer: t("faq.answer4"),
  },
];
---

<section class="py-24 bg-background">
  <div class="container mx-auto max-w-screen-xl px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-foreground mb-4">
        {t("faq.title")}
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        {t("faq.subtitle")}
      </p>
    </div>

    <div class="flex flex-col gap-6 max-w-3xl mx-auto">
      {
        faqItems.map((faq) => (
          <details class="group bg-secondary/20 rounded-2xl p-6 md:p-8 transition-all duration-300 hover:bg-secondary/40 open:bg-secondary/40">
            <summary class="flex gap-6 cursor-pointer list-none items-start">
              <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary/10 text-primary flex items-center justify-center font-serif font-bold text-lg mt-1">
                Q
              </div>
              <div class="flex-grow">
                <div class="flex justify-between items-center">
                  <h3 class="text-xl font-bold text-primary group-hover:text-primary/80 transition-colors">
                    {faq.question}
                  </h3>
                  <Icon
                    name="tabler:chevron-down"
                    class="w-6 h-6 text-muted-foreground transition-transform duration-300 group-open:rotate-180 flex-shrink-0 ml-4"
                  />
                </div>
                <div class="grid grid-rows-[0fr] group-open:grid-rows-[1fr] transition-all duration-300 ease-in-out">
                  <div class="overflow-hidden">
                    <div class="pt-4 flex gap-6">
                      <div class="flex-shrink-0 w-8 h-8 rounded-full bg-transparent flex items-center justify-center font-serif font-bold text-lg text-muted-foreground">
                        A
                      </div>
                      <p class="text-muted-foreground leading-relaxed text-lg">{faq.answer}</p>
                    </div>
                  </div>
                </div>
              </div>
            </summary>
          </details>
        ))
      }
    </div>
  </div>
</section>

<style>
  summary {
    /* Hide native marker in most browsers */
    list-style: none;
    /* Remove default marker in Safari/Chrome */
    &::marker, &::-webkit-details-marker {
      display: none;
      content: "";
      appearance: none;
    }
    /* Optional: adjust padding for alignment */
    padding-left: 0;
    margin-left: 0;
  }
</style>
