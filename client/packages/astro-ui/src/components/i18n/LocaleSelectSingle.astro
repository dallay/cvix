---
import { getRelativeLocaleUrl } from "astro:i18n";
import { LOCALES, SUPPORTED_LOCALES } from "@cvix/i18n";
import type { Lang } from "@cvix/i18n/astro";

console.assert(
	SUPPORTED_LOCALES.length === 2,
	"The number of locale settings is not 2. This UI only supports switching between 2 languages.",
);

const currentLocale = Astro.currentLocale as Lang;
const anotherLang: Lang =
	currentLocale === SUPPORTED_LOCALES[0]
		? SUPPORTED_LOCALES[1]
		: SUPPORTED_LOCALES[0];
---

<a
  href={getRelativeLocaleUrl(
    anotherLang,
    Astro.url.pathname.replace(/^\/[a-zA-Z-]+/, ""),
  )}
>
  <span class="material-icons-sharp">translate</span>
  {LOCALES[anotherLang].label}
</a>

<style>
  a {
    display: inline-block;
    padding: 0.5em;
    background-color: color-mix(in srgb, var(--color-main) 10%, transparent);
    border-radius: 6px;
    font-family: "Noto Sans";
    text-align: center;
    opacity: 0.7;
    &:hover {
      opacity: 1;
    }

    span {
      margin-inline-end: 0.2em;
      opacity: 0.6;
    }
  }
</style>
