{
	"name": "@cvix/utilities",
	"version": "3.11.1",
	"description": "A collection of utilities for the ProFileTailors",
	"license": "MIT",
	"type": "module",
	"homepage": "https://example.com",
	"author": "ProFileTailors",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=10.27.0"
	},
	"packageManager": "pnpm@10.27.0",
	"main": "./src/index.ts",
	"module": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": "./src/index.ts",
		"./*": "./src/*"
	},
	"typesVersions": {
		"*": {
			"*": [
				"./src/*"
			]
		}
	},
	"files": [
		"package.json",
		"dist"
	],
	"keywords": [
		"ProFileTailors",
		"utilities"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/dallay/cvix.git",
		"directory": "client/packages/utilities",
		"branch": "main"
	},
	"bugs": {
		"url": "https://github.com/dallay/cvix/issues"
	},
	"scripts": {
		"dev": "vite dev --mode development",
		"clean:types": "rimraf dist tsconfig.build.tsbuildinfo",
		"build:types:raw": "tsc --build",
		"build:types": "run-s clean:types build:types:raw",
		"build:vite": "vite build",
		"build:all": "run-s build:types build:vite",
		"build": "run-s build:all",
		"preview": "vite preview",
		"check:tsc": "tsc --project tsconfig.check.json --noEmit --skipLibCheck",
		"check": "pnpm run clean:types && pnpm run check:tsc",
		"format": "biome format . --write",
		"clean": "rimraf dist coverage",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"gravatar-url": "^4.0.1"
	},
	"devDependencies": {
		"@cvix/config": "workspace:*",
		"@cvix/tsconfig": "workspace:*",
		"@internationalized/date": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"npm-run-all2": "catalog:",
		"rimraf": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vite-plugin-dts": "catalog:",
		"vitest": "catalog:"
	},
	"publishConfig": {
		"access": "public"
	}
}
