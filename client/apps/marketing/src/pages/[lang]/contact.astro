---
import { CVIX_API_URL, HCAPTCHA_SITE_KEY } from "astro:env/client";
import {
	Button,
	CsrfToken,
	Field,
	FieldGroup,
	FieldLabel,
	FieldSet,
	Footer,
	HCaptcha,
	Icon,
	Input,
	Textarea,
} from "@cvix/astro-ui";
import { LOCALES } from "@cvix/i18n";
import { type Lang } from "@cvix/i18n/astro";
import { useTranslations } from "@/i18n/i18n";
import Layout from "@/layouts/LandingLayout.astro";
import { footerNavLinks } from "@/models/menu";

const locale = Astro.currentLocale as Lang;
const t = useTranslations(locale);

export const getStaticPaths = () =>
	Object.keys(LOCALES).map((lang) => ({
		params: { lang },
	}));
---

<Layout title={t('contact.title')} description={t('contact.description')}>
